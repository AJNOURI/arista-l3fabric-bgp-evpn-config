! Command: show running-config
! device: spine3 (vEOS, EOS-4.18.5M)
!
! boot system flash:/vEOS-lab.swi
!
transceiver qsfp default-mode 4x10G
!
service routing protocols model multi-agent
!
hostname spine3
!
spanning-tree mode mstp
!
no aaa root
!
interface Ethernet1
   description LEAF-R101
   no switchport
   ip address 172.16.103.1/30
!
interface Ethernet2
   description LEAF-R102
   no switchport
   ip address 172.18.103.1/30
!
interface Ethernet3
   no switchport
   ip address 172.16.123.1/30
!
interface Ethernet4
   no switchport
   ip address 172.18.123.1/30
!
interface Ethernet5
   no switchport
   ip address 172.16.133.1/30
!
interface Ethernet6
   no switchport
   ip address 172.18.133.1/30
!
interface Ethernet7
!
interface Loopback0
!
interface Loopback255
   description MGMT
   ip address 10.255.255.3/32
!
interface Management1
!
ip routing
!
ip prefix-list LOOPBACKS
   seq 10 permit 10.255.255.3/32
!
route-map LOOPBACKS permit 10
   match ip address prefix-list LOOPBACKS
!
router bgp 65000
   router-id 10.255.255.3
   maximum-paths 3
   neighbor LEAF peer-group
   neighbor LEAF remote-as 65100
   no neighbor LEAF next-hop-unchanged
   neighbor LEAF send-community
   neighbor LEAF maximum-routes 12000 
   neighbor LEAF-EVPN peer-group
   neighbor LEAF-EVPN remote-as 65100
   neighbor LEAF-EVPN next-hop-unchanged
   neighbor LEAF-EVPN update-source Loopback255
   neighbor LEAF-EVPN ebgp-multihop 5
   neighbor LEAF-EVPN send-community extended
   neighbor LEAF-EVPN maximum-routes 12000 
   neighbor 10.255.255.11 peer-group LEAF-EVPN
   neighbor 10.255.255.12 peer-group LEAF-EVPN
   neighbor 10.255.255.21 peer-group LEAF-EVPN
   neighbor 10.255.255.22 peer-group LEAF-EVPN
   neighbor 10.255.255.31 peer-group LEAF-EVPN
   neighbor 10.255.255.32 peer-group LEAF-EVPN
   neighbor 172.16.103.2 peer-group LEAF
   neighbor 172.16.123.2 peer-group LEAF
   neighbor 172.16.133.2 peer-group LEAF
   neighbor 172.18.103.2 peer-group LEAF
   neighbor 172.18.123.2 peer-group LEAF
   neighbor 172.18.133.2 peer-group LEAF
   redistribute connected route-map LOOPBACKS
   !
   address-family evpn
      no neighbor LEAF activate
      neighbor LEAF-EVPN activate
   !
   address-family ipv4
      no neighbor LEAF-EVPN activate
!
end